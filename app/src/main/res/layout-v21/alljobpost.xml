<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_job_post_title"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:text="@string/job_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_31_july_2018"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/all_job_post_date"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/all_job_post_description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/all_job_post_location"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skills"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/all_job_post_skills"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/salary"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/all_job_post_salary"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>
        
        
        
        
        
</androidx.constraintlayout.widget.ConstraintLayout>